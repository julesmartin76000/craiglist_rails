<%= form_for [@category, @item] do |f| %>

    <%= f.label(:name, "Name:") %>
    <%= f.text_field :name%>

    <%= f.label(:price, "Price:") %>
    <%= f.number_field :price%>

    <%= f.label(:description, "Description:") %>
    <%= f.text_field :description%>

    <%= f.submit "Submit"%>

<% end %>
